<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="35dp"
        android:background="@drawable/dialogshape">

        <EditText
            android:id="@+id/nameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:hint="ادخل اسم المنتج "
            android:singleLine="false" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:hint="ادخل تاريخ الانتهاء"
            android:singleLine="false" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:background="@drawable/savebutton"
            android:clickable="true"
            android:text="حفظ"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/radiotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginRight="20dp"
            android:text="اختر نوع المنتج :"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first_choise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اكل"
                android:layout_margin="5dp"
                android:layout_gravity="right">



            </RadioButton>

            <RadioButton
                android:id="@+id/second_choise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مشروب"
                android:layout_margin="5dp"
                android:layout_gravity="right">
            </RadioButton>
            <RadioButton
                android:id="@+id/third_choise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دواء"

                android:layout_margin="5dp"
                android:layout_gravity="right"></RadioButton>


        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"

            android:orientation="horizontal"


            >


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit"
        android:padding="4dp">


        <ImageView
            android:id="@+id/error_dialog_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/ic_plus" />



    </FrameLayout>
</FrameLayout>




